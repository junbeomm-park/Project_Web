<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- 템플릿 -->
	<definition name="mainTemplate" template="/WEB-INF/layout/mainLayout.jsp">
		<put-attribute name="nav" value="/WEB-INF/layout/nav.jsp"/>
		<put-attribute name="content" value="/WEB-INF/layout/index.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
	</definition>
	
	
	<!-- 뷰 -->
	<definition name="index" extends="mainTemplate"/>
	<definition name="login" extends="loginTemplate"/>
	<definition name="sign" extends="signTemplate"/>
	<definition name="find" extends="findTemplate"/>
	
	
	
</tiles-definitions>